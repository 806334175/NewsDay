<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_collect_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:focusable="true"
            android:id="@+id/fragment_collect_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/fragment_hottopic_loading_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:background="#ffffff"
            android:id="@+id/fragment_hottopic_loading_refresh_tv"
            android:textSize="50sp"
            android:text="点击刷新"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="25sp"
            android:text="网络连接错误！"
            android:textColor="#ff0000"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fragment_hottopic_loading_refresh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/fragment_hottopic_loading_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/fragment_hottopic_loading_iv"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>