<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar">
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/activity_main_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/activity_main_bottom"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/activity_main_bottom_ll_news"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:id="@+id/activity_main_bottom_ll_news_img"
                        android:background="@drawable/new_unselected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/activity_main_bottom_ll_news_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="资讯"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/activity_main_bottom_ll_collect"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:id="@+id/activity_main_bottom_ll_collect_img"
                        android:background="@drawable/collect_unselected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/activity_main_bottom_ll_collect_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热点"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/activity_main_bottom_ll_find"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:id="@+id/activity_main_bottom_ll_find_img"
                        android:background="@drawable/find_defult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/activity_main_bottom_ll_find_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="搜索"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/activity_main_fragment"
                android:layout_above="@id/activity_main_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:clickable="true"

            android:id="@+id/activity_main_drawerlayout_left"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start">
            <RelativeLayout
                android:layout_weight="1"
                android:background="@drawable/main_bg"
                android:tag="skin:main_bg:background"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/activity_main_user_img"
                    android:layout_centerInParent="true"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/login_defult_img"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#ffffff"/>
                <TextView
                    android:id="@+id/activity_main_drawerlayout_left_login_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:text="立即登录"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_for_stroke_black"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:background="@drawable/bg_for_press_become_gray"
                            android:id="@+id/activity_main_drawerlayout_left_city"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="20sp"/>
                        <com.example.nowingo.newsday.view.MarqueeText
                            android:background="@drawable/bg_for_press_become_gray"
                            android:id="@+id/activity_main_drawerlayout_left_weather"
                            android:gravity="center"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"/>
                        <TextView
                            android:background="@drawable/bg_for_press_become_gray"
                            android:id="@+id/activity_main_drawerlayout_left_changecity"
                            android:gravity="center"
                            android:text="切换"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="20sp"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_for_stroke_black"
                    android:layout_height="0dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginBottom="0.5dp"
                        android:background="@drawable/bg_for_press_become_gray"
                        android:text="快递查询"
                        android:id="@+id/activity_main_drawerlayout_left_express"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20sp"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:id="@+id/activity_main_drawerlayout_left_collect"
                        android:background="@drawable/bg_for_press_become_gray"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/star_defult"
                            android:layout_marginLeft="20dp"/>
                        <TextView
                            android:layout_marginLeft="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的收藏"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:background="@drawable/bg_for_press_become_gray"
                        android:id="@+id/activity_main_drawerlayout_left_aboutus"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/icon_aboutme"/>
                        <TextView
                            android:layout_marginLeft="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关于我们"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_for_press_become_gray"
                        android:id="@+id/activity_main_drawerlayout_left_setting"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/icon_select"/>
                        <TextView
                            android:layout_marginLeft="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设置"
                            android:textSize="20sp"/>
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
