<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/fragment_news_viewpager_srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:focusable="true"
            android:id="@+id/fragment_news_viewpager_rlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/fragment_news_viewpager_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/fragment_news_viewpager_refresh_tv"
            android:textSize="50sp"
            android:text="点击刷新"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="25sp"
            android:text="网络连接错误！"
            android:textColor="#ff0000"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fragment_news_viewpager_refresh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/fragment_news_viewpager_pro"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/fragment_news_viewpager_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>